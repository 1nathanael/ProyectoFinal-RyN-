@model IEnumerable<ProyectoFinal__RyN__.Models.Nomina>

@{
    ViewBag.Title = "Listado de nomina";
}

<h2>Listado de Nominas</h2>

@*<p>
    @Html.ActionLink("Generar Nomina", "HomeNomina", "Nomina")
</p>*@
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Año)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MontoTotal)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Año)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mes)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MontoTotal)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id = item.Id_Nomina }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id_Nomina }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id_Nomina })*@
            <a class="btn btn-default btn-info" href="~/Nomina/Edit/@item.Id_Nomina" title="Editar">
                <i class="glyphicon glyphicon-edit"></i>
            </a>
            <a class="btn btn-default btn-warning" href="~/Nomina/Details/@item.Id_Nomina" title="Detalles">
                <i class="glyphicon glyphicon-list-alt"></i>
            </a>
            <a class="btn btn-default btn-danger" href="~/Nomina/Delete/@item.Id_Nomina" title="Eliminar">
                <i class="glyphicon glyphicon-trash"></i>
            </a>
        </td>
    </tr>
}

</table>
<p>

    <a class="btn btn-default btn-success" href="~/Nomina/HomeNomina">
      Generar Nomina

    </a>
</p>
