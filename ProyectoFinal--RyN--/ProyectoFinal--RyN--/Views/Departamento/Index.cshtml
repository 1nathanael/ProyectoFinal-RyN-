@{
    ViewBag.Title = "Index";
}
<br />  
<h2><u>Listado de Departamentos</u></h2>
<br /> <br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Codigo_Depto)
        </th>
        <th>
