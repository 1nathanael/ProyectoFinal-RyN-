@model IEnumerable<ProyectoFinal__RyN__.Models.Cargo>

@{
    ViewBag.Title = "Index";
}
<br /> 
<h2>Lista de Cargos</h2>
<br />  
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre_Cargo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre_Cargo)
                
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id=item.Id_Cargo }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Id_Cargo }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Id_Cargo })*@
                <a class="btn btn-default btn-info" href="~/Cargo/Edit/@item.Id_Cargo" title="Editar">
                    <i class="glyphicon glyphicon-edit"></i>
                </a>
                <a class="btn btn-default btn-warning" href="~/Cargo/Details/@item.Id_Cargo" title="Detalles">
                    <i class="glyphicon glyphicon-list-alt"></i>
                </a>
                <a class="btn btn-default btn-danger" href="~/Cargo/Delete/@item.Id_Cargo" title="Eliminar">
                    <i class="glyphicon glyphicon-trash"></i>
                </a>
            </td>
        </tr>
    }

</table>
<p>

    <a class="btn btn-default btn-success" href="~/Cargo/Create/">
        Registrar Nuevo Cargo

    </a>
</p>
